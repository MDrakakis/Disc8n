DISCORD_TOKEN=your_discord_bot_token_here # Your bot token from Discord Developer Portal

DISCORD_CLIENT_ID=your_discord_client_id_here # Optional: Discord Client ID (used for slash commands or app registration)
ENABLE_SLASH_COMMANDS=true # Enable or disable slash commands (true/false)

COMMAND_PREFIX=! # Prefix for text commands, e.g., "!command_name"

ALLOWED_USERS=123456789012345678,987654321098765432 # Comma-separated list of allowed Discord user IDs
ALLOWED_ROLES=111111111111111111,222222222222222222 # Comma-separated list of allowed role IDs
ALLOWED_CHANNELS=333333333333333333,444444444444444444 # Comma-separated list of allowed channel IDs

LOG_LEVEL=info # Log level: debug, info, warn, error

N8N_BASE_URL=http://n8n:5678 # Base URL of your n8n instance (do not include trailing slash)
N8N_AUTH_HEADER= # Optional: Authorization header for n8n webhooks, e.g., "Bearer <token>"
N8N_TIMEOUT=30000 # Request timeout to n8n in milliseconds